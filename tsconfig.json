/* https://aka.ms/tsconfig.json */
{
    "include": [
        "src"
    ],
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "incremental": true,
        "tsBuildInfoFile": "./dist/tsbuildinfo",
        "baseUrl": "src",
        "paths": {
            "#root/*": [
                "./*"
            ],
        },
    },
}