{
    // use worspace's version of typescript
    "typescript.tsdk": "./node_modules/typescript/lib",
    // hint vitest plugin to use pnpm
    "vitest.commandLine": "pnpm exec vitest",
    // formatting
    "editor.formatOnSave": true,
    "[javascript][typescript][javascriptreact][typescriptreact][json][css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // debugging
    "debug.javascript.autoAttachFilter": "onlyWithFlag",
    // file nesting
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": false,
    "explorer.fileNesting.patterns": {
        "package.json": ".editorconfig, pnpm*, .pnpm*, prettier*, .prettier*, tsconfig.*, .npmrc, .gitignore, drizzle.config.ts, vite.config.ts",
        "config*.yaml": "config$(capture).template.yaml",
        "*.ts": "$(capture).test.ts",
        "docker-compose.yml": "Dockerfile"
    },
}