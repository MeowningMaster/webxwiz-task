{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug",
            "program": "${workspaceFolder}/src/main.ts",
            "runtimeArgs": [
                "--loader",
                "tsx"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std",
            "sourceMaps": true
        }
    ]
}